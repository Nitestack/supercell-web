- const subTitle = player.name + " Edit Home Village Structures";
- const upgradeTracker = "Clash of Clans";
- const playerBuilderHall = builderHall[player.builderHallLevel - 1];
- const allBuilderHalls = builderHall.slice(0, player.builderHallLevel);

doctype
html(lang='en')
    head
        include ../../Includes/header
        script(src="/JS/Clash of Clans/Upgrade/editBuilderStructures.js", defer)
        style.
            .col {
                background: linear-gradient(#8993AD, #6B7798);
                border-radius: 7px; 
                border: 4px solid #697697;
                padding-top: 6px;
            }
    body
        include ../../Includes/navbar
        include ../../Includes/upgradeTracker
        .d-flex.justify-content-center
            if player
                form(method="POST", action="/upgrade-tracker/clashofclans/builder/structures/set")
                    .container(style="background-color: #5E5451; border-radius: 9px; border: 1px solid #181614;")
                        include ../../Includes/profile
                        .row.mb-3
                            .col 
                                p.lead Options
                                .input-group.mb-3
                                    span.coc-description.input-group-text(style="font-size: 20px;") Set all BH
                                    input.coc-description.form-control#maxSlider(type="number", min=1, max=allBuilderHalls.length, style="font-size: 20px;")
                                    span.coc-description.input-group-text(style="font-size: 20px;") maxed 
                                    button.btn.btn-success(type="button", id="maxButton")
                                        i.fas.fa-check
                                    button.btn.btn-danger(type="button", id="resetButton") #[i.fas.fa-undo] Reset
                        h1 Defenses 
                        .row.mb-3
                            .col
                                if playerBuilderHall.cannon
                                    p.lead Cannon
                                    +createGlobalSlider("Cannon", player.builderHallLevel)
                                    +createSlider("Cannon1", 1, player.builderHallLevel, "/Images/Clash of Clans/Builder/Defenses/Cannon/1.png")
                                    - let i = 2;
                                    each _ in Array(playerBuilderHall.cannon - 1)
                                        +createSlider("Cannon" + i++, 0, player.builderHallLevel, "/Images/Clash of Clans/Builder/Defenses/Cannon/0.png")
                            .col
                                +createMultipleSlidersBuilder("Archer Tower", "/Images/Clash of Clans/Builder/Defenses/Archer Tower/0.png")
                            .col
                                +createMultipleSlidersBuilder("Double Cannon", "/Images/Clash of Clans/Builder/Defenses/Double Cannon/0.png")
                        if playerBuilderHall.hiddenTesla
                            .row.mb-3
                                .col 
                                    +createMultipleSlidersBuilder("Firecrackers", "/Images/Clash of Clans/Builder/Defenses/Firecrackers/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Hidden Tesla", "/Images/Clash of Clans/Builder/Defenses/Hidden Tesla/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Crusher", "/Images/Clash of Clans/Builder/Defenses/Crusher/0.png")
                        if playerBuilderHall.guardPost
                            .row.mb-3
                                .col
                                    +createMultipleSlidersBuilder("Guard Post", "/Images/Clash of Clans/Builder/Defenses/Guard Post/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Air Bombs", "/Images/Clash of Clans/Builder/Defenses/Air Bombs/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Multi Mortar", "/Images/Clash of Clans/Builder/Defenses/Multi Mortar/0.png")
                        if playerBuilderHall.roaster
                            .row.mb-3
                                .col
                                    +createMultipleSlidersBuilder("Roaster", "/Images/Clash of Clans/Builder/Defenses/Roaster/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Giant Cannon", "/Images/Clash of Clans/Builder/Defenses/Giant Cannon/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Mega Tesla", "/Images/Clash of Clans/Builder/Defenses/Mega Tesla/0.png")
                        if playerBuilderHall.lavaLauncher
                            .row.mb-3 
                                .col
                                    +createMultipleSlidersBuilder("Lava Launcher", "/Images/Clash of Clans/Builder/Defenses/Lava Launcher/0.png")
                                .col 
                                .col
                        if playerBuilderHall.pushTrap
                            h1 Traps 
                            .row.mb-3 
                                .col
                                    +createMultipleSlidersBuilder("Push Trap", "/Images/Clash of Clans/Builder/Traps/Push Trap/0.png")
                                .col 
                                    +createMultipleSlidersBuilder("Mine", "/Images/Clash of Clans/Builder/Traps/Mine/0.png")
                                .col 
                                    +createMultipleSlidersBuilder("Spring Trap", "/Images/Clash of Clans/Builder/Traps/Spring Trap/0.png")
                            if playerBuilderHall.megaMine
                                .row.mb-3 
                                    .col 
                                        +createMultipleSlidersBuilder("Mega Mine", "/Images/Clash of Clans/Builder/Traps/Mega Mine/0.png")
                                    .col 
                                    .col
                        h1 Ressources
                        .row.mb-3
                            .col
                                if playerBuilderHall.elixirCollector
                                    p.lead Elixir Collector 
                                    +createGlobalSlider("ElixirCollector", player.builderHallLevel)
                                    +createSlider("ElixirCollector1", 1, player.builderHallLevel, "/Images/Clash of Clans/Builder/Resources/Elixir Collector/1.png")
                                    - let i = 2;
                                    each _ in Array(playerBuilderHall.elixirCollector - 1)
                                        +createSlider("ElixirCollector" + i++, 0, player.builderHallLevel, "/Images/Clash of Clans/Builder/Resources/Elixir Collector/0.png")
                            .col 
                                if playerBuilderHall.goldMine
                                    p.lead Gold Mine 
                                    +createGlobalSlider("GoldMine", player.builderHallLevel)
                                    +createSlider("GoldMine1", 1, player.builderHallLevel, "/Images/Clash of Clans/Builder/Resources/Gold Mine/1.png")
                                    - let i = 2;
                                    each _ in Array(playerBuilderHall.goldMine - 1)
                                        +createSlider("GoldMine" + i++, 0, player.builderHallLevel, "/Images/Clash of Clans/Builder/Resources/Gold Mine/0.png")
                            .col
                                +createMultipleSlidersBuilder("Gem Mine", "/Images/Clash of Clans/Builder/Resources/Gem Mine/0.png")
                        if playerBuilderHall.elixirStorage
                            .row.mb-3
                                .col
                                    +createMultipleSlidersBuilder("Elixir Storage", "/Images/Clash of Clans/Builder/Resources/Elixir Storage/0.png")
                                .col 
                                    +createMultipleSlidersBuilder("Gold Storage", "/Images/Clash of Clans/Builder/Resources/Gold Storage/0.png")
                                .col
                                    +createMultipleSlidersBuilder("Clock Tower", "/Images/Clash of Clans/Builder/Resources/Clock Tower/0.png")
                        h1 Army
                        .row.mb-3
                            .col 
                                if playerBuilderHall.armyCamp
                                    p.lead Army Camp 
                                    +createGlobalSlider("ArmyCamp", 1)
                                    +createSlider("ArmyCamp1", 1, 1, "/Images/Clash of Clans/Builder/Army/Army Camp/1.png")
                                    - let i = 2;
                                    each _ in Array(playerBuilderHall.armyCamp - 1)
                                        +createSlider("ArmyCamp" + i++, 0, 1, "/Images/Clash of Clans/Builder/Army/Army Camp/0.png")
                            .col 
                                if playerBuilderHall.starLaboratory
                                    p.lead Star Laboratory 
                                    +createGlobalSlider("StarLaboratory", player.builderHallLevel)
                                    +createSlider("StarLaboratory1", 1, player.builderHallLevel, "/Images/Clash of Clans/Builder/Army/Star Laboratory/1.png")
                            .col
                        h1 Walls 
                        .row.mb-3 
                            .col 
                                p.coc-description.lead(style="font-size: 20px;") You don't need to set the number of walls, that are not built yet!
                                p.coc-description.lead#wallDisplay(style="font-size: 20px; color: white;") 0 of #{playerBuilderHall.wall} Wall Compartments
                                p.coc-description.lead#wallError(style="color: red; font-size: 20px;")
                            .col 
                                each _, i in Array(player.builderHallLevel)
                                    .slideGroup
                                        .container 
                                            .row
                                                .col-3
                                                    div.coc-description.lead(align="left", style="font-size: 28px;") Lv. #{i + 1}
                                                        img.slider-image(src="/Images/Clash of Clans/Builder/Defenses/Wall/" + (i + 1) + ".png")
                                                .col-6
                                                    input.slider(type="range", min=0, max=playerBuilderHall.wall, id="Wall" + (i + 1), name="Wall" + (i + 1), value=0)
                                                .col-3
                                                    input.coc-description.form-control(type="number", min=0, max=playerBuilderHall.wall, id="numberWall" + (i + 1), value=0, style="font-size: 20px;")
                        button.btn.btn-success(type="submit", name="player", id="player", value=player) Proceed
        include ../../Includes/footer