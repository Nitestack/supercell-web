- const subTitle = "Admin Access";

doctype
html(lang='en')
    head
        include ../Includes/header
        script(src="/JS/admin.js")
    body
        include ../Includes/navbar
        .jumbotron.text-center.bg-transparent
            h1.display-3 #{websiteName} - Admin Access
            p.coc-description.lead(style="font-size: 28px;") Get stats and data!
            .container(background)
                .row
                    h3 Stats
                    .col
                        p Registered User: 
                            span.cr-description #{userCount}
                .row
                    h3 User Board
                    .col
                        .flexible-inline
                            button.btn.btn-primary(onclick="displayAllUsers();") Display all
                            button.btn.btn-success Create one
                            button.btn.btn-danger Delete one
                        pre#userDisplayPre(style="display: none;")
                            code#userDisplay(class="language-json")
                .row 
                    h3 Clash of Clans Village Board
                    .col
                        .flexible-inline 
                            button.btn.btn-primary(onclick="displayAllCoCVillages();") Display all
                            button.btn.btn-success(onclick="") Create one
                            button.btn.btn-danger Delete one
                        pre#cocVillagesDisplayPre(style="display: none;")
                            code#cocVillagesDisplay(class="language-json")
            
        include ../Includes/footer