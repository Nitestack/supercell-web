doctype
html(lang='en')
    head
        include ../../../Includes/header

        link(rel="stylesheet", href="/CSS/Upgrade/index.css")
        script(src="/JS/Clash of ClansUpgrade/index.js")
    body
        include ../Includes/navbar
        .jumbotron.text-center.bg-transparent
            img.img-fluid(src='/Images/index.png', size=256, id="image")
            h1.display-3 Upgrade Tracker
            p.lead Use the Upgrade Tracker to manage your upgrades, make calender notes and more!
        .d-flex.justify-content-center
            form(method="POST", action="/upgrade-tracker/clashofclans/verifyPlayer")
                if errorMessage
                    p.lead(style="color: red;") #{errorMessage}
                p.lead Please enter the API token you can find in your Clash of Clans Game Settings below. 
                .input-group
                    input.form-control(name="apiToken", id="apiToken", type="text", placeholder="API Token")
                    button.btn.btn-success(type="submit", name="playerTag", value=playerTag) #[i.fas.fa-search]
                p 
                    img(src="https://i.redd.it/vz2gjc28kwf21.png")
        include ../../../Includes/footer