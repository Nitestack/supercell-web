- const subTitle = "Stats Tracker";

doctype
html(lang='en')
    head
        include ../Includes/header
    body
        include ../Includes/navbar
        .jumbotron.text-center.bg-transparent
            img.img-fluid(src='/Images/index.png', size=256, id="image")
            h1.display-3 Stats Tracker
            p.lead Get data from official game API's!
        .container
            .d-flex.justify-content-center
                #statsModal.accordion.bg-transparent
                    ul.list-group.bg-transparent
                        li.list-group-item.accordion-item(style="background-color: #5E5451; border-radius: 9px; border: 1px solid #181614;")
                            h2#cocHeader.accordion-header
                                .accordion-button.collapsed.no-display-flex#cocOpenModal(type='button', data-bs-toggle='collapse', data-bs-target='#cocCollapse', aria-expanded='true', aria-controls='cocCollapse', style="background-image: url('/Images/Clash of Clans Background.jpg'); background-size: cover;")
                                    .center-image
                                        img(src="/Images/Clash of Clans Logo.png", style="height: 250px;")
                            #cocCollapse.accordion-collapse.collapse(aria-labelledby='cocHeader', data-bs-parent='#statsModal')
                                .accordion-body#cocBody(style="background: linear-gradient(#8993AD, #6B7798);")
                                    p.price-item.coc-description Any content here
                        li.list-group-item.accordion-item(style="background-color: #5E5451; border-radius: 9px; border: 1px solid #181614;")
                            h2#bsHeader.accordion-header
                                .accordion-button.collapsed.no-display-flex#bsOpenModal(type='button', data-bs-toggle='collapse', data-bs-target='#bsCollapse', aria-expanded='true', aria-controls='bsCollapse', style="background-image: url('/Images/Brawl Stars Background.jpg'); background-size: cover;")
                                    .center-image
                                        img(src="/Images/Brawl Stars Logo.png", style="height: 250px;")
                            #bsCollapse.accordion-collapse.collapse(aria-labelledby='bsHeader', data-bs-parent='#statsModal')
                                .accordion-body#bsBody(style="background: linear-gradient(#8993AD, #6B7798);")
                                    p.price-item.bs Any content here
                        li.list-group-item.accordion-item(style="background-color: #5E5451; border-radius: 9px; border: 1px solid #181614;")
                            h2#crHeader.accordion-header
                                .accordion-button.collapsed.no-display-flex#crOpenModal(type='button', data-bs-toggle='collapse', data-bs-target='#crCollapse', aria-expanded='true', aria-controls='crCollapse', style="background-image: url('/Images/Clash Royale Background.jpg'); background-size: cover;")
                                    .center-image
                                        img(src="/Images/Clash Royale Logo.png", style="height: 250px;")
                            #crCollapse.accordion-collapse.collapse(aria-labelledby='crHeader', data-bs-parent='#statsModal')
                                .accordion-body#crBody(style="background: linear-gradient(#8993AD, #6B7798);")
                                    p.cr-description.price-item Any content here
                        li.list-group-item.accordion-item(style="background-color: #5E5451; border-radius: 9px; border: 1px solid #181614;")
                            h2#bbHeader.accordion-header
                                .accordion-button.collapsed.no-display-flex#bbOpenModal(type='button', data-bs-toggle='collapse', data-bs-target='#bbCollapse', aria-expanded='true', aria-controls='bbCollapse', style="background-image: url('/Images/Boom Beach Background.jpg'); background-size: cover;")
                                    .center-image
                                        img(src="/Images/Boom Beach Logo.png", style="height: 250px;")
                            #bbCollapse.accordion-collapse.collapse(aria-labelledby='crHeader', data-bs-parent='#statsModal')
                                .accordion-body#bbBody(style="background: linear-gradient(#8993AD, #6B7798);")
                                    p.price-item.bb Supercell has no public API for Boom Beach!
        include ../Includes/footer